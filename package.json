{
    "name": "node-ts-mongo-template",
    "version": "1.0.0",
    "description": "API REST Template con NodeJs, TypeScript y Mongoose",
    "main": "index.js",
    "engines": {
        "node": "18.16.0",
        "npm": "9.5.1"
    },
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint --fix . --ext .ts",
        "build-dev": "tsc && webpack --mode production",
        "start-dev": "set NODE_ENV=development&& ts-node-dev --respawn ./src/index.ts",
        "build": "tsc && webpack --mode production && rm -v -rf src && rm -v -rf build && rm -v -rf resourses && rm -rf public/resource/",
        "start": "set NODE_ENV=production&& node dist/index.js"
    },
    "keywords": [],
    "author": "Francisco Yorlano",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.0",
        "moment-timezone": "^0.5.43",
        "mongoose": "^7.3.1",
        "nodemailer": "^6.9.3",
    },
    "devDependencies": {
        "@babel/core": "^7.22.5",
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^20.3.2",
        "@types/nodemailer": "^6.4.8",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "babel-loader": "^9.1.2",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^35.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "fs": "^0.0.1-security",
        "http": "^0.0.1-security",
        "https": "^1.0.0",
        "nodemon": "^3.0.1",
        "path": "^0.12.7",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.1.6",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.4",
        "webpack-node-externals": "^3.0.0"
    }
}
